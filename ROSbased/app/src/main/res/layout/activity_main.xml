<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3DBD5"
    tools:context=".MainActivity"
    android:radius="30dp">

    <TextView
        android:id="@+id/main"
        android:layout_width="622dp"
        android:layout_height="63dp"
        android:text="Welcome to E-Da OUTLET MALL"
        android:textColor="#1C0958"
        android:textSize="80px"
        android:textStyle="bold"
        android:layout_x="32dp"
        android:layout_y="56dp"/>

    <Button
        android:id="@+id/btGuide"
        android:layout_width="230dp"
        android:layout_height="218dp"
        android:layout_centerInParent="true"
        android:alpha="0.5"
        android:background="@mipmap/departmentstore_foreground"
        android:layout_x="68dp"
        android:layout_y="281dp"/>

    <Button
        android:id="@+id/btDiscount"
        android:layout_width="230dp"
        android:layout_height="218dp"
        android:layout_centerInParent="true"
        android:alpha="0.5"
        android:background="@mipmap/champagne_foreground"
        android:layout_x="663dp"
        android:layout_y="278dp"/>

    <Button
        android:id="@+id/btActivity"
        android:layout_width="230dp"
        android:layout_height="218dp"
        android:layout_centerInParent="true"
        android:alpha="0.5"
        android:background="@mipmap/balloon_foreground"
        android:layout_x="365dp"
        android:layout_y="278dp"/>

    <TextView
        android:id="@+id/locationbtn"
        android:layout_width="156dp"
        android:layout_height="46dp"
        android:text="櫃位導引"
        android:textColor="#30082A"
        android:textSize="70px"
        android:textStyle="bold"
        android:layout_x="142dp"
        android:layout_y="450dp"/>

    <TextView
        android:id="@+id/discountbtn"
        android:layout_width="148dp"
        android:layout_height="43dp"
        android:text="折扣優惠"
        android:textColor="#30082A"
        android:textSize="70px"
        android:textStyle="bold"
        android:layout_x="745dp"
        android:layout_y="447dp"/>

    <TextView
        android:id="@+id/eventbtn"
        android:layout_width="153dp"
        android:layout_height="49dp"
        android:text="活動快訊"
        android:textColor="#30082A"
        android:textSize="70px"
        android:textStyle="bold"
        android:layout_x="442dp"
        android:layout_y="447dp"/>

    <ImageView
        android:layout_width="500px"
        android:layout_height="300px"
        android:src="@mipmap/eda_foreground"
        android:layout_x="706dp"
        android:layout_y="481dp"/>

    <View
        android:layout_width="432dp"
        android:layout_height="5dp"
        android:background="#B4A5C6"
        android:layout_x="32dp"
        android:layout_y="119dp"/>
</AbsoluteLayout>